{
  "compilerOptions": {
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["scripts/*", "test/*", "build/typechain/**/*", "types/**/*"],
  "files": ["./hardhat.config.ts"]
}
